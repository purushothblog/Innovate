<center><%= image_tag ('/assets/images/logo.jpg') %></center>

<center><h1><u>CUSTOMER DATA CREATION</u></h1>


<%= form_for @customer do |f| %>
<div class=form>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
</div>
<div class=form>
	<%= f.label :balance %>
	<%= f.text_field :balance %>
</div>
<div class=form>
	<%= f.label :age %>
	<%= f.text_field :age %>
</div>

<div class=form>
	<%= f.label :ATM %>
	<%= f.check_box :atm %>
</div>
<div class=form>
	<%= f.label :mobile %>
	<%= f.check_box :mobile %>
</div>

<div class=form>
	<%= f.label :net %>
	<%= f.check_box :net %>
</div>

<div class=form>
	<%= f.label :sms %>
	<%= f.check_box :sms %>
</div>

<div class=form>
	<%= f.label :cdm %>
	<%= f.check_box :cdm %>
</div>

<div class=submit >
<%= f.submit "Add Customer" %>
</div>
<% end %>
</center>