<center><h1><u>Syndicate Bank Valanchery Branch</u></h1>
	<u><h2>List of Customers</h2></u>
	<table>
		<thead> 
			<th bgcolor="violet"><%= link_to "Customer ID", :sort => "id" %></th>
			<th bgcolor="violet"><%= link_to "NAME", :sort => "name" %></th>
			<th bgcolor="violet"><%= link_to "BALANCE", :sort => "balance" %></th>
			<th bgcolor="violet"><%= link_to "AGE", :sort => "age" %></th>
			<th bgcolor="violet"><%= link_to "ATM", :sort => "atm" %></th>
			<th bgcolor="violet"><%= link_to "MOBILE Banking", :sort => "mobile" %></th>
			<th bgcolor="violet"><%= link_to "NET Banking", :sort => "net" %></th>
			<th bgcolor="violet"><%= link_to "SMS", :sort => "sms" %></th>
			<th bgcolor="violet"><%= link_to "CDM", :sort => "cdm" %></th>
			<th bgcolor="violet"><%= link_to "Marks", :sort => "mark" %></th>

		</thead>
<% @customer.each do |customer| %>
	
		<tbody>
	<tr>
		<td bgcolor="#C7ADAD"><h3><%= customer.id %></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.name || "No" %></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.balance || "No" %></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.age || "No"%></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.atm || "No"%></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.mobile || "No"%></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.net || "No"%></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.sms || "No"%></h3></td>
		<td bgcolor="#F3CDCD"><h3><%= customer.cdm || "No"%></h3></td>
		<td bgcolor="#F3CDCD"><h3>

			<% if customer.atm.present?
  			     @marks = 5
  					
  				if customer.mobile.present?
  					 @marks =  @marks + 5
  				else 
  					@marks = @marks + 0
  				end
  			elsif
  				 customer.mobile.present?
  				 @marks = 5
  				else
  				@marks =  0
  			
  	end %>

  		<% customer.mark = @marks %>


		<%= @marks || "No"%></h3></td>

	</tr>
</tbody>
	
<% end %>
</table>
</center>



